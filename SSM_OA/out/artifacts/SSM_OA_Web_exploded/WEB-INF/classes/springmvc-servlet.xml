<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                         http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd
                        http://www.springframework.org/schema/mvc
                        http://www.springframework.org/schema/mvc/spring-mvc.xsd"
                        >
<!-- 注解扫描 -->         
<context:component-scan base-package="com.ujiuy.*.controller"></context:component-scan>
<!-- springmvc注解扫描 -->        
<mvc:annotation-driven conversion-service="myDateService">
</mvc:annotation-driven>   
<!-- 将前端静态资源交给servlet -->
<mvc:default-servlet-handler/>   

<!-- 映射器处理器 -->
<bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"></bean>
<!-- 处理器适配器 -->
<bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter"></bean>
<!-- 配置视图解析器的作用 可以设置前缀后缀-->
<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
<!-- value 是设置在某个文件夹下 只有/是在webcontext下
设置前后缀后，后台controller只写页面名字比如index，可以识别处在webcontext加后缀.jsp
-->
<property name="prefix" value="/views/"></property>
<property name="suffix" value=".jsp"></property>
</bean>  
<!-- 文件上传 --> 
   <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
       <property name="maxUploadSize" value="20000000"></property>
       <property name="maxUploadSizePerFile" value="1000000"></property>
     </bean>
    <!-- 日期转化器 -->
    <bean id="md" class="com.ujiuy.utils.MyConvertor"></bean>
    <bean id="myDateService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <ref bean="md"/>
            </set>
        </property>
    </bean>
     

</beans>